# Color Scheme
# TokyoNight
# Gruvbox Dark
theme = Vesper

# Font
font-size = 20
font-family = UDEV Gothic NF # https://github.com/yuru7/udev-gothic

# Window
window-padding-balance = true
window-theme = ghostty
window-width = 150
window-height = 60
window-inherit-working-directory = true
window-new-tab-position = current

# Background
background-opacity = 0.9
background-blur-radius = 0

# Mouse
mouse-hide-while-typing = true

# Cursor
cursor-color = white
