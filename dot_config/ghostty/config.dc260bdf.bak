# Color Scheme
theme = Dark pastel

# Font
font-size = 25
font-family = UDEV Gothic NF # https://github.com/yuru7/udev-gothic

# Window
window-padding-balance = true
window-theme = ghostty
window-width = 150
window-height = 60

# Background
background-opacity = 0.85
background-blur-radius = 40

# Mouse
mouse-hide-while-typing = true

# Cursor
cursor-color = white
cursor-opacity = 0.7
cursor-style-blink = false

# Other
macos-titlebar-style = transparent
macos-titlebar-style = hidden
copy-on-select = true
